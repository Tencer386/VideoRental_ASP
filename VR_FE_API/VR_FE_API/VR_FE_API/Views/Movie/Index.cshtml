@model IEnumerable<VR_FE_API.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a href="@Url.Action("Create", "Movie")" class="btn btn-default" style="font-size:20px">
        <i class="glyphicon glyphicon-file"></i> Create New
    </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PicFileName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PicFileName)
        </td>
        <td>
            @Html.ActionLink(" Edit", "Edit", new { id=item.MovieId }, new { @class = "glyphicon glyphicon-pencil" }) |
            @Html.ActionLink(" Details", "Details", new { id=item.MovieId }, new { @class = "glyphicon glyphicon-list-alt" }) |
            @Html.ActionLink(" Delete", "Delete", new { id=item.MovieId }, new { @class = "glyphicon glyphicon-trash" })
        </td>
    </tr>
}

</table>

@section Scripts{
    <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });
    </script>
}
